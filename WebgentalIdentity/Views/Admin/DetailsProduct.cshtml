@model WebgentalIdentity.Models.Product

@{
    ViewData["Title"] = "DetailsProduct";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}


<link href='' rel='stylesheet'>
<style>
    body {
        font-family: 'Roboto Condensed', sans-serif;
        background-color: #f5f5f5
    }

    .hedding {
        font-size: 20px;
        color: #ab8181;
    }

    .main-section {
        position: absolute;
        left: 50%;
        right: 50%;
        transform: translate(-50%, 5%);
    }

    .left-side-product-box img {
        width: 100%;
    }

    .left-side-product-box .sub-img img {
        margin-top: 5px;
        width: 83px;
        height: 100px;
    }

    .right-side-pro-detail span {
        font-size: 15px;
    }

    .right-side-pro-detail p {
        font-size: 25px;
        color: #a1a1a1;
    }

    .right-side-pro-detail .price-pro {
        color: #E45641;
    }

    .right-side-pro-detail .tag-section {
        font-size: 18px;
        color: #5D4C46;
    }

    .pro-box-section .pro-box img {
        width: 100%;
        height: 100%;
    }
</style>
<script type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>
<script type='text/javascript' src='https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js'></script>
<script type='text/javascript' src='https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js'></script>


<div class="container-fluid">
    <div class="col-lg-8 border p-3 main-section bg-white">
        <div class="row hedding m-0 pl-3 pt-0 pb-3">
            Product Detail
        </div>
        <div class="row m-0">
            <div class="col-lg-4 left-side-product-box pb-3">
                <div>
                    <img src="~/Images/@Model.ProfileImage" class="border-1 img-fluid" style="height:420px;width:100%" />
                </div>
                @* <img src="https://i.ibb.co/QMFS6LD/Png-Item-1945815.png" class="border p-3">*@
                @*  <span class="sub-img">
                        <img src="http://nicesnippets.com/demo/pd-image2.jpg" class="border p-2">
                        <img src="http://nicesnippets.com/demo/pd-image3.jpg" class="border p-2">
                        <img src="http://nicesnippets.com/demo/pd-image4.jpg" class="border p-2">
                    </span> *@
            </div>
            <div class="col-lg-8">
                <div class="right-side-pro-detail border p-3 m-0">
                    <div class="row">
                        <div class="col-lg-12">
                            <p class="m-0 p-0">@ViewBag.catlist</p>
                        </div>
                        <div class="col-lg-12">

                            <p class="m-0 p-0">@Html.DisplayFor(model => model.Pname)</p>
                        </div>
                        <div class="col-lg-12">
                            <p class="m-0 p-0 price-pro">$ @Html.DisplayFor(model => model.Pprice)</p>
                            <hr class="p-0 m-0">
                        </div>
                        <div class="col-lg-12 pt-2">
                            <h5>Product Detail</h5>
                            <span>
                                @Html.Raw(Model.Pdetail)
                            </span>
                         
                        </div>
                      
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type='text/javascript'></script>
