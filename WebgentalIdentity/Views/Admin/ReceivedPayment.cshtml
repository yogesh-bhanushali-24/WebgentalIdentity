@model IEnumerable<WebgentalIdentity.Models.Orders>

@{
    ViewData["Title"] = "ReceivedPayment";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
    int SR = 1;
}
<table class="table">
    <thead>
        <tr>
            <th>
                SR
            </th>
            <th>
                Customer Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Pname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.ProfileImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Pprice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                Recieved Money
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @SR
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.applicationUser.FirstName)  @Html.DisplayFor(modelItem => item.applicationUser.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Pname)
                </td>
                <td>
                    <img src="~/Images/@item.Product.ProfileImage" height="50px" width="50px" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    ₹@Html.DisplayFor(modelItem => item.Product.Pprice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @{
                        var Paid = item.Product.Pprice * item.Quantity;
                    }

                    ₹@Paid
                </td>
            </tr>
            SR++;
        }
       <tr>
           <td colspan="7"><b>Total</b></td>
           <td><b>₹@ViewBag.ReceivedPayment</b></td>
       </tr>
    </tbody>
</table>
